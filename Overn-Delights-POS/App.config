<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
  
    <connectionStrings>
        <add name="OvenDelightsERPConnectionString" 
             connectionString="Server=tcp:your-server.database.windows.net,1433;Initial Catalog=OvenDelightsERP;Persist Security Info=False;User ID=your-username;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;" 
             providerName="Microsoft.Data.SqlClient" />
    </connectionStrings>
  
    <appSettings>
        <!-- Use Demo tables for safe development -->
        <add key="UseDemoTables" value="true" />
        
        <!-- POS Settings -->
        <add key="CompanyName" value="Oven Delights" />
        <add key="VATRate" value="0.15" />
        <add key="ReceiptFooter" value="Thank you for your purchase!" />
        
        <!-- UI Colors (can be changed) -->
        <add key="PrimaryColor" value="#D2691E" />
        <add key="SecondaryColor" value="#8B4513" />
        <add key="AccentColor" value="#FFD700" />
    </appSettings>
</configuration>